<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cmu.ece.build18.firstapp.MainActivity">

    <ToggleButton
        android:textOn="Connected"
        android:textOff="Disconnected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usb_switch" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send uart message"
        android:onClick="sendUartMessage"
        android:layout_below="@+id/usb_switch"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receive uart message"
        android:onClick="receiveUartMessage"
        android:layout_below="@+id/button_send"
        android:layout_alignParentStart="true" />

    <Button android:layout_below="@+id/button_receive"
        android:id="@+id/get_location_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get location"
        android:onClick="getLocationBtnCallback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="Nothing yet"
        android:layout_below="@+id/get_location_btn"/>


</RelativeLayout>
